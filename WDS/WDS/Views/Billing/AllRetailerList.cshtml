@model IEnumerable<WDS.DAL.WdsEntities.RetailerInfo>
@{
    ViewBag.Title = "AllRetailerList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-lg-8">
                            Retailers
                        </div>
                        <div class="col-lg-4">
                            @*<span style="text-align: right">Total Retailer: 50</span>*@
                        </div>

                    </div>

                </div>
                <div class="card-body">
                    <table class="table table-striped table-bordered" id="tbl_retailers">
                        <thead>
                        <tr>
                            <th>Distributor Name</th>
                            <th>Distributor Code</th>
                            <th>Retailer Name</th>
                            <th>Address</th>
                            <th>Owner Name</th>
                            <th>Mobile Number</th>
                            <th>Payment No.</th>
                        </tr>
                        </thead>
                        <tbody>
                        @if (Model.Any())
                        {
                            foreach (var model in Model)
                            {
                                <tr>
                                    @Html.HiddenFor(modelItem => model.Id)

                                    <td>@Html.DisplayFor(modelItem => model.DistributorName)</td>
                                    <td>@Html.DisplayFor(modelItem => model.DistributorCode)</td>
                                    <td>@Html.DisplayFor(modelItem => model.RetailerName)</td>
                                    <td>@Html.DisplayFor(modelItem => model.RetailerAddress)</td>
                                    <td>@Html.DisplayFor(modelItem => model.OwnerName)</td>
                                    <td>@Html.DisplayFor(modelItem => model.PhoneNumber)</td>
                                    <td>@Html.DisplayFor(modelItem => model.PaymentNumber)</td>
                                </tr>
                            }
                        }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(function () {
        
        var table = $('#tbl_retailers').DataTable();

        new $.fn.dataTable.Buttons(table, {
            buttons: [
                { extend: 'excel', className: 'excelBtn', title: 'Data export Retailer', text: 'Click For Excel Export' }
            ]
        });

        table.buttons(0, null).container().prependTo(
            table.table().container()
        );
    });
</script>
