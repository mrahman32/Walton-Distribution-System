@model WDS.Models.DistributorCheckListModel


@using (Html.BeginForm("CreateVAT", "Document", FormMethod.Post, new { id = "CreateVAT", enctype = "multipart/form-data" }))
{
    <div class="col-lg-12">
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.DealerCode)
        @Html.HiddenFor(model => model.IsCreationApproved)
        @Html.HiddenFor(model => model.CreationApprovedBy)
        @Html.HiddenFor(model => model.CreationApprovedDate)
        @Html.HiddenFor(model => model.IsTheDealerBlocked)
        @Html.HiddenFor(model => model.IsTemporaryOpen)
        @Html.HiddenFor(model => model.TempOpenDate)
        @Html.HiddenFor(model => model.TempExpireDate)
        @Html.HiddenFor(model => model.AddedBy)
        @Html.HiddenFor(model => model.AddedDate)
        @Html.HiddenFor(model => model.UpdatedBy)
        @Html.HiddenFor(model => model.UpdatedDate)
        @Html.HiddenFor(model => model.UpdateName)
        
        

        @Html.HiddenFor(model=>model.ValueAddedTaxModel.Id)
        @Html.HiddenFor(model => model.ValueAddedTaxModel.CheckListId)
        @Html.HiddenFor(model => model.ValueAddedTaxModel.AddedBy)
        @Html.HiddenFor(model => model.ValueAddedTaxModel.AddedDate)
        @Html.HiddenFor(model => model.ValueAddedTaxModel.UpdatedBy)
        @Html.HiddenFor(model => model.ValueAddedTaxModel.UpdatedDate)

        <div class="form-group row">
            <label class="col-lg-3 col-form-label text-sm-right">BIN</label>
            <div class="col-lg-6">
                @Html.TextBoxFor(model => model.ValueAddedTaxModel.BIN_No, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ValueAddedTaxModel.BIN_No, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-lg-3 col-form-label text-sm-right">Name</label>
            <div class="col-lg-6">
                @Html.TextBoxFor(model => model.ValueAddedTaxModel.Name, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ValueAddedTaxModel.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        @if (Model != null && !Model.IsApprover)
        {
             <div class="form-group row">
            <label class="col-lg-3 col-form-label text-sm-right"></label>
            <div class="col-lg-6 text-right">
                <button type="submit" id="btnVatSave" class="btn btn-outline-success"><i class="fas fa-save"></i>&nbsp;Save</button>
            </div>
        </div>
        }
        
       
    
    </div>
    
    <script type="text/javascript">
        $(".ddPicker").datepicker({ dateFormat: 'mm-dd-yy', changeMonth: true, changeYear: true, yearRange: "-100:+00" })
            .on('keypress paste', function (e) {
                e.preventDefault();
                return false;
            });
    </script>
}
