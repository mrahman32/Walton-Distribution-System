@model WDS.Models.MOC_ChequesModel

<tr id="@Model.Id">
    @using (Html.BeginCollectionItem("MemorandumOfChequeModel.MocChequesModels"))
    {
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.MOCId)
        @Html.HiddenFor(m => m.AddedBy)
        @Html.HiddenFor(m => m.AddedDate)
        @Html.HiddenFor(m => m.ChequeFileUrl)
        @Html.HiddenFor(m => m.UpdateName)
        @Html.HiddenFor(m => m.UpdatedBy)
        @Html.HiddenFor(m => m.UpdatedDate)
        <td>@Html.TextBoxFor(model => model.ChequeNo, null, new { @class = "form-control", required = "required" })</td>
        <td>@Html.TextBoxFor(model => model.ChecqueAmount, new { @class = "form-control", required = "required", @number = "number" })</td>
        <td>
            <div class="row">
                <div class="col-6">@Html.TextBoxFor(model => model.ChequeFileBase, new { type = "file", @class = "form-control", accept = "image/x-png,image/gif,image/jpeg" })</div>
                <div class="col-6">
                    @*<img alt="" class="img-responsive img-rounded" src="@Model.ChequeWebUrl" style="display: block;max-width:100px;max-height:100px;width: auto; height: auto; " />*@

                    <div class="container">
                        <iframe class="responsive-iframe" src="@Model.ChequeWebUrl"  width="100" height="100"></iframe>
                    </div>


                </div>
            </div>
            


        </td>
        <td><button type="button" id="removeProductRow" class="btn btn-primary btn-sm" onclick="removeDetailRow(this)">Remove</button></td>
    }
</tr>

<script type="text/javascript">
    
    
    function removeDetailRow(ths) {
        var thisRow = ths.closest('tr');
        thisRow.remove();
    }
</script>

